{
  "name": "budayana",
  "type": "module",
  "version": "1.0.50",
  "scripts": {
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed-islands": "bun run src/lib/db/seed-islands.ts",
    "db:seed-stories": "bun run src/lib/db/seed-stories.ts",
    "db:seed-questions": "bun run src/lib/db/seed-questions.ts",
    "ba:gen": "npx @better-auth/cli generate --config ./src/lib/auth/config.ts --output ./src/lib/db/prisma/auth.prisma",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts"
  },
  "prisma": {
    "seed": "bun run src/lib/db/seed.ts"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.12",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "better-auth": "^1.4.7",
    "dotenv": "^17.2.3",
    "elysia": "latest",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bun-types": "^1.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
